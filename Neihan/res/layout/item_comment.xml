<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/comment_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        />
    <TextView 
        android:id="@+id/comment_profile_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_profile_image"
        android:layout_alignTop="@id/comment_profile_image"
        android:layout_marginLeft="8dp"
        android:text="ABCD"
        />
    <TextView 
        android:id="@+id/comment_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comment_profile_nick"
        android:layout_below="@id/comment_profile_nick"
        android:layout_marginTop="8dp"
        android:text="1小时前发表"
        />
    <TextView 
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comment_profile_nick"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_create_time"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:text="评论内容。。。。。。。。。。。。。。。。。。。。。。。。。"
        />
     <CheckBox
                android:id="@+id/comment_digg_count"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/item_digg_bg"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="111" />
</RelativeLayout>
